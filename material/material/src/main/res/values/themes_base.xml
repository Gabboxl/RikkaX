<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
    Theme.Material3.(Variant) (Material Components)
    ↓
    Base.(API).Material3.(Variant).Rikka
    ↓
    Base.Material3.(Variant).Rikka
    ↓
    Theme.Material3.(Variant).Rikka (Generated by MaterialThemeBuilder plugin)
    -->

    <!--
    Theme.Material3.(Variant).Rikka
    ↓
    Theme.Material3.(Variant).DynamicColors.Rikka (Generated by MaterialThemeBuilder plugin)
    -->

    <!-- Base themes -->
    <style name="Base.V21.Material3.Light.Rikka" parent="Theme.Material3.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:ambientShadowAlpha">@dimen/ambient_shadow_alpha</item>
        <item name="android:spotShadowAlpha">@dimen/spot_shadow_alpha</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:dividerVertical">?android:listDivider</item>
        <item name="android:dividerHorizontal">?android:listDivider</item>
        <item name="android:backgroundDimAmount">@dimen/rd_material_dialog_default_dim_amount</item>

        <item name="dialogCornerRadius">@dimen/rd_default_dialog_corner_radius</item>
        <item name="swipeRefreshLayoutProgressSpinnerBackgroundColor">?cardBackground</item>

        <item name="cardBackground">@color/cardview_light_background</item>
        <item name="colorAlert">@color/material_red_A200</item>
        <item name="colorSafe">@color/material_green_600</item>
        <item name="colorWarning">@color/material_orange_700</item>
        <item name="colorInactive" tools:ignore="PrivateResource">@color/material_grey_600</item>

        <item name="outlineButtonStyle">@style/Widget.Material.Button.Outline.Light</item>
        <item name="outlineButtonBackground">@drawable/material_button_outline_background</item>
        <item name="outlineButtonForeground">@drawable/material_button_outline_foreground</item>
        <item name="materialButtonHorizontalMarginAmend">@dimen/rd_material_button_horizontal_margin_amend</item>
        <item name="navigationBarDividerColor">@color/navigation_bar_divider_light</item>

        <item name="extendedFloatingActionButtonStyle">@style/Widget.Material.ExtendedFloatingActionButton.Icon</item>

        <!-- SwitchBar -->
        <item name="switchBarStyle">@style/Widget.SwitchBar.Light</item>
        <item name="switchBarTheme">@style/ThemeOverlay.SwitchBar</item>
        <item name="switchBarBackgroundNormal">@color/switchbar_background_light</item>
        <item name="switchBarBackgroundDisabled">@color/switchbar_background_light</item>

        <!-- Android 12 System Settings Switch -->
        <item name="android:switchStyle">@style/Widget.Material3.Light.Switch.Rikka</item>
        <item name="switchStyle">@style/Widget.Material3.Light.Switch.Rikka</item>

        <!-- Material Components MatrialSwitch -->
        <item name="materialSwitchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch</item>

        <!-- Material Components PopupMenuBackground -->
        <item name="popupMenuBackground">@drawable/m3_popupmenu_background</item>

        <!-- Material Components dynamic color overlay -->
        <item name="dynamicColorThemeOverlay">@style/ThemeOverlay.Material3.DynamicColors.Light.Rikka</item>

        <!-- Android framework text colors. Different to Material Components,
             they uses our palette attributes instead of hardcoded colors. -->
        <item name="android:textColorPrimary">@color/m3_light_text_color_primary</item>
        <item name="android:textColorPrimaryInverse">@color/m3_dark_text_color_primary</item>
        <item name="android:textColorSecondary">@color/m3_light_text_color_secondary</item>
        <item name="android:textColorSecondaryInverse">@color/m3_dark_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/m3_light_text_color_secondary</item>
        <item name="android:textColorTertiaryInverse">@color/m3_dark_text_color_secondary</item>
        <item name="android:textColorPrimaryDisableOnly">@color/m3_light_text_color_primary_disable_only</item>
        <item name="android:textColorPrimaryInverseDisableOnly">@color/m3_dark_text_color_primary_disable_only</item>
        <item name="android:textColorHint">@color/m3_light_text_color_hint</item>
        <item name="android:textColorHintInverse">@color/m3_dark_text_color_hint</item>
        <item name="android:textColorHighlight">@color/m3_light_text_color_highlighted</item>
        <item name="android:textColorHighlightInverse">@color/m3_dark_text_color_highlighted</item>
        <item name="android:textColorLink">?colorPrimary</item>
        <item name="android:textColorLinkInverse">?colorPrimaryInverse</item>
        <item name="android:textColorAlertDialogListItem">@color/m3_light_text_color_primary</item>
    </style>

    <style name="Base.V21.Material3.Dark.Rikka" parent="Theme.Material3.Dark">
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:ambientShadowAlpha">@dimen/ambient_shadow_alpha</item>
        <item name="android:spotShadowAlpha">@dimen/spot_shadow_alpha</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:dividerVertical">?android:listDivider</item>
        <item name="android:dividerHorizontal">?android:listDivider</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:backgroundDimAmount">@dimen/rd_material_dialog_default_dim_amount</item>

        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark_dark</item>
        <item name="actionBarStyle">@style/Widget.Material.ActionBar.Surface</item>
        <item name="dialogCornerRadius">@dimen/rd_default_dialog_corner_radius</item>
        <item name="swipeRefreshLayoutProgressSpinnerBackgroundColor">?cardBackground</item>

        <item name="cardBackground">@color/cardview_dark_background</item>
        <item name="colorAlert">@color/material_red_A100</item>
        <item name="colorSafe">@color/material_green_A100</item>
        <item name="colorWarning">@color/material_orange_A100</item>
        <item name="colorInactive">@color/material_grey_500</item>

        <item name="outlineButtonStyle">@style/Widget.Material.Button.Outline</item>
        <item name="outlineButtonBackground">@drawable/material_button_outline_background_dark</item>
        <item name="outlineButtonForeground">@drawable/material_button_outline_foreground</item>
        <item name="materialButtonHorizontalMarginAmend">@dimen/rd_material_button_horizontal_margin_amend</item>
        <item name="navigationBarDividerColor">@color/navigation_bar_divider_dark</item>

        <item name="extendedFloatingActionButtonStyle">@style/Widget.Material.ExtendedFloatingActionButton.Icon</item>

        <!-- SwitchBar -->
        <item name="switchBarStyle">@style/Widget.SwitchBar</item>
        <item name="switchBarTheme">@style/ThemeOverlay.SwitchBar</item>
        <item name="switchBarBackgroundNormal">@color/switchbar_background_dark</item>
        <item name="switchBarBackgroundDisabled">@color/switchbar_background_dark</item>

        <!-- Android 12 System Settings Switch -->
        <item name="android:switchStyle">@style/Widget.Material3.Dark.Switch.Rikka</item>
        <item name="switchStyle">@style/Widget.Material3.Dark.Switch.Rikka</item>

        <!-- Material Components MatrialSwitch -->
        <item name="materialSwitchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch</item>

        <!-- Material Components PopupMenuBackground -->
        <item name="popupMenuBackground">@drawable/m3_popupmenu_background</item>

        <!-- Material Components dynamic color overlay -->
        <item name="dynamicColorThemeOverlay">@style/ThemeOverlay.Material3.DynamicColors.Dark.Rikka</item>

        <!-- Android framework text colors. Different to Material Components,
             they uses our palette attributes instead of hardcoded colors. -->
        <item name="android:textColorPrimary">@color/m3_dark_text_color_primary</item>
        <item name="android:textColorPrimaryInverse">@color/m3_light_text_color_primary</item>
        <item name="android:textColorSecondary">@color/m3_dark_text_color_secondary</item>
        <item name="android:textColorSecondaryInverse">@color/m3_light_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/m3_dark_text_color_secondary</item>
        <item name="android:textColorTertiaryInverse">@color/m3_light_text_color_secondary</item>
        <item name="android:textColorPrimaryDisableOnly">@color/m3_dark_text_color_primary_disable_only</item>
        <item name="android:textColorPrimaryInverseDisableOnly">@color/m3_light_text_color_primary_disable_only</item>
        <item name="android:textColorHint">@color/m3_dark_text_color_hint</item>
        <item name="android:textColorHintInverse">@color/m3_light_text_color_hint</item>
        <item name="android:textColorHighlight">@color/m3_dark_text_color_highlighted</item>
        <item name="android:textColorHighlightInverse">@color/m3_light_text_color_highlighted</item>
        <item name="android:textColorLink">?colorPrimary</item>
        <item name="android:textColorLinkInverse">?colorPrimaryInverse</item>
        <item name="android:textColorAlertDialogListItem">@color/m3_dark_text_color_primary</item>
    </style>

    <style name="Base.Material3.Light.Rikka" parent="Base.V21.Material3.Light.Rikka" />
    <!-- Theme for users -->
    <style name="Theme.Material.Light" parent="Base.Light" />

    <style name="Theme.Material.Light.Dialog" parent="Base.Light.Dialog" />

    <style name="Theme.Material" parent="Base" />

    <style name="Theme.Material.Dialog" parent="Base.Dialog" />

    <!-- Light theme variants -->
    <style name="Theme.Material.Light.DarkActionBar" parent="Theme.Material.Light">
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionBarWidgetTheme">@null</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>

        <!-- Panel attributes -->
        <item name="listChoiceBackgroundIndicator" tools:ignore="PrivateResource">@drawable/abc_list_selector_holo_dark</item>

        <item name="colorPrimaryDark" tools:ignore="PrivateResource">@color/primary_dark_material_dark</item>
        <item name="colorPrimary" tools:ignore="PrivateResource">@color/primary_material_dark</item>
    </style>

    <style name="Base.Material3.Dark.Rikka" parent="Base.V21.Material3.Dark.Rikka" />

</resources>
